---
export interface Props {
  label: string;
}

const { label } = Astro.props as Props;

---

<button class="px-4 py-2 mt-4 text-sm font-medium text-white uppercase transition-colors duration-200 transform bg-orange-600 rounded-md lg:w-auto hover:bg-blue-500 focus:outline-none focus:bg-blue-500">
  {label}
</button>