---
export interface Props {
  title?: string;
  variant?: string;
}

const { title, variant = "light" } = Astro.props as Props;
---

<section class={ variant === "light" ? "white" : "bg-gray-200"}>
  <div class="container px-6 py-12 mx-auto">
    <h2 class="text-2xl font-semibold text-black uppercase">{title}</h2>
    <slot />
  </div>
</section>
